# change window focus within space
cmd - up : yabai -m window --focus north
cmd - down : yabai -m window --focus south
cmd - left : yabai -m window --focus west
cmd - right : yabai -m window --focus east

# finder
alt - n : open .

# rotate layout clockwise
alt - r : yabai -m space --rotate 270
# flip along y-axis
alt - y : yabai -m space --mirror y-axis
# flip along x-axis
alt - x : yabai -m space --mirror x-axis
# stop yabai
# cmd - escape : yabai -m window --toggle float
cmd - escape : yabai -m query --windows --space | jq '.[].id' | xargs -I {} yabai -m window {} --toggle float

#change focus between external displays (left and right)
# shift + cmd - left : yabai -m display --focus west
# shift + cmd - right : yabai -m display --focus east
# move window to display left and right
shift + cmd - left : yabai -m window --display west; yabai -m display --focus west;
shift + cmd - right : yabai -m window --display east; yabai -m display --focus east;

# toggle window float
shift + cmd - down : yabai -m window --toggle float --grid 4:4:1:1:2:2
# maximize a window
cmd - f11 : yabai -m window --toggle zoom-fullscreen

# swap windows
cmd + shift - left : yabai -m window --swap west
cmd + shift - right : yabai -m window --swap east
cmd + shift - up : yabai -m window --swap north
cmd + shift - down : yabai -m window --swap south
